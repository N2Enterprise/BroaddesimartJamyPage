---
import { SEO } from "astro-seo";
import Navbar from "../components/Navbar.astro";
import NavMobile from "../components/NavMobile.astro";
import { ViewTransitions } from "astro:transitions";
import { fade } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>

    <SEO
      title="Indian grocery store near me"
      description="Best Indian supermarket Authentic Indian spices shop Online Indian grocery delivery Top-rated Indian food market Local Indian produce store Specialty Indian grocery shop Organic Indian groceries nearby Halal Indian food store Gourmet Indian ingredients shop"
      openGraph={{
        basic: {
          title: "Indian grocery store near me",
          type: "A type.",
          image: "/images/banner.png",
        }
      }}
     
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "/images/banner.png",
          }
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/jamy.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	<ViewTransitions/>
  </head>
  <body transition:animate={fade({ duration: '0.3s' })}>
    <NavMobile/>
    <Navbar />
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family:
      Arial,
      Helvetica,
      sans-serif system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    background-color: rgb(0,0 ,0);

  }
   *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
   }

   

  body::-webkit-scrollbar{
    width: 0;
  }
  
  body::-webkit-scrollbar-thumb{
    background-color: rgb(2, 0, 13);
    border-radius: 10px;
  }
  
  body::-webkit-scrollbar-thumb:hover{
    background-color: rgb(2, 0, 13);
  }
  
</style>
