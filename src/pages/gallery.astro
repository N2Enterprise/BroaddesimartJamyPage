---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact us">
    <section transition:animate="slide"  class="home cursor-default px-8% text-white gap-4">
      
       
        <div class="flex gap-12 flex-wrap justify-center items-center ">
          <img  src="/images/gallery/gal2.jpg" alt="" width="300" height="300">
          <img  src="/images/gallery/gal1.jpg" alt="" width="300" height="300">

          <img  src="/images/gallery/gal3.jpg" alt="" width="300" height="300">
        </div>
        
</section>
 </Layout>  

 <style>

    .home {
      background-image: linear-gradient(
          0deg,
          rgba(0, 0, 0, 0.7),
          rgba(0, 0, 0, 0.7)
        ),
        url(/images/bg1.jpg);
      width: 100%;
      min-height: calc(100vh - 52px);
      background-position: center;
      background-size: cover;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
</style>  